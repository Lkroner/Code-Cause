<% @causes.each do |cause| %>
	<ul>
		<li><%= cause.name %> <br/> <%= cause.description %> </li>
	</ul>
<% end %>

<!--  -->
<h4>Sign Up as a Coder</h4>
<%= form_for @coder, {action: "create"} do |f| %>
	<%= f.text_field :name, placeholder: "Name", required: true %>
	<br>
	<%= f.text_field :email, placeholder: "Email", required: true %>
	<br>
	<%= f.text_field :picture, placeholder: "Image Link" %>
	<br>
	<%= hidden_field_tag 'title', 'coder' %>
	<%= f.submit 'submit' %>
<% end %>

