<div>
  <%= form_for(@cause) do |f| %>
  <ul>
    <%= f.label :name %><br>
    <%= f.text_area :name, required: true %>
  </ul>
  <ul>
    <%= f.label :description %><br>
    <%= f.text_area :description, required: true %>
  </ul>
  <ul>
    <% Cause::SKILLS.each do |skill, skill_string| %>
      <li>
        <%= check_box_tag(skill) %>
        <%= label_tag(skill, skill_string) %>
      </li>
    <% end %>
  </ul>
  <ul>
    <%= f.submit "Create Cause" %>
  </ul>
  <% end %>
</div>
